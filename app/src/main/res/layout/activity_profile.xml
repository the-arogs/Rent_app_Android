<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:layout_margin="8dp"
    tools:context=".screens.login.ProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/options_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        android:background="@color/blue3"
        />

    <TextView
        android:id="@+id/screen_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile "
        android:textColor="@color/black"

        android:fontFamily="@font/montserrat_bold"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/options_menu" />

    <TextView
        android:id="@+id/tv_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen_label"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_bold"

        />
    <TextView
        android:id="@+id/tv_name_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_name_label"
        app:layout_constraintTop_toBottomOf="@id/screen_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_bold"

        />

    <TextView
        android:id="@+id/tv_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_data"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_bold"

        />
    <TextView
        android:id="@+id/tv_email_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_email_label"
        app:layout_constraintTop_toBottomOf="@id/tv_name_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_bold"

        />
    <TextView
        android:id="@+id/tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_data"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_bold"

        />
    <TextView
        android:id="@+id/tv_phone_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_phone_label"
        app:layout_constraintTop_toBottomOf="@id/tv_email_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserrat_bold"

        />

<!--    <Button-->
<!--        android:id="@+id/btn_view_shortlist"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="View Shortlist"-->
<!--        android:layout_margin="8dp"-->
