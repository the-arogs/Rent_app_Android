<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.tenant.DetailsActivity"
    android:padding="16dp"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/options_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        android:background="@color/blue3"
        />

    <TextView
        android:id="@+id/tv_screen_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Property Info"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/options_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_screen_label"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_price_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_price_label"
        app:layout_constraintTop_toBottomOf="@id/tv_screen_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_property_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Type:"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_price_data"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_property_type_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_property_type_label"
        app:layout_constraintTop_toBottomOf="@id/tv_price_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: :"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_property_type_data"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_address_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_address_label"
        app:layout_constraintTop_toBottomOf="@id/tv_property_type_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_specification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specification: "
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address_data"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_specification_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_specification_label"
        app:layout_constraintTop_toBottomOf="@id/tv_address_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_specification_data"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_description_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_description_label"
        app:layout_constraintTop_toBottomOf="@id/tv_specification_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_availability_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Availability: "
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description_data"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_availability_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_availability_label"
        app:layout_constraintTop_toBottomOf="@id/tv_description_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_owner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner: "
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_availability_data"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_owner_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_owner_label"
        app:layout_constraintTop_toBottomOf="@id/tv_availability_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>